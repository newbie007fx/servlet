<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>simple-crud</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>mahasiswa</servlet-name>
  	<servlet-class>com.training.crud.controller.MahasiswaController</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>departemen</servlet-name>
  	<servlet-class>com.training.crud.controller.DepartemenController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>mahasiswa</servlet-name>
  	<url-pattern>/mahasiswa.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>departemen</servlet-name>
  	<url-pattern>/departemen.html</url-pattern>
  </servlet-mapping>
</web-app>